<!DOCTYPE html>
<html lang="bn">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <title>Responsive Health Chart</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        :root {
            --primary: #2563eb;
            --secondary: #eff6ff;
            --text-dark: #1e293b;
            --text-light: #64748b;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Inter', sans-serif; }

        body {
            background-color: #f1f5f9;
            display: flex;
            justify-content: center;
            align-items: flex-start; /* Aligns to top on mobile */
            min-height: 100vh;
            padding: 15px; /* Reduced padding for mobile */
        }

        .container {
            width: 100%;
            max-width: 600px; /* Ideal width for mobile cards */
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.05);
            overflow: hidden;
            margin-top: 10px;
        }

        /* --- Header --- */
        .header {
            background: var(--primary);
            color: white;
            padding: 20px;
            text-align: center;
        }
        .header h2 { font-size: 20px; font-weight: 700; }
        .header p { font-size: 13px; opacity: 0.9; margin-top: 5px; }

        /* --- Input Section --- */
        .input-section {
            padding: 20px;
            display: grid;
            grid-template-columns: 1fr 1fr; /* 2 columns default */
            gap: 12px;
            background: white;
            border-bottom: 1px solid #e2e8f0;
        }

        .full-width { grid-column: 1 / -1; } /* Button takes full width */

        .form-group label {
            display: block;
            font-size: 12px;
            color: var(--text-light);
            margin-bottom: 5px;
            font-weight: 600;
        }

        .form-group input, .form-group select {
            width: 100%;
            padding: 12px;
            border: 1px solid #cbd5e1;
            border-radius: 8px;
            font-size: 14px;
            outline: none;
            background: #f8fafc;
        }
        
        .height-inputs { display: flex; gap: 8px; }

        .generate-btn {
            background: var(--text-dark);
            color: white;
            padding: 14px;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            margin-top: 5px;
            width: 100%;
            font-size: 14px;
        }

        /* --- Result Section --- */
        #result-chart {
            display: none;
            padding: 20px;
            animation: fadeIn 0.5s ease;
        }

        /* Stats Grid (Mobile Friendly) */
        .stats-grid {
            display: grid;
            grid-template-columns: 1fr 1fr; /* 2 columns on mobile */
            gap: 10px;
            margin-bottom: 20px;
        }

        .stat-card {
            background: var(--secondary);
            padding: 12px;
            border-radius: 10px;
            text-align: center;
        }
        .stat-card i { font-size: 18px; color: var(--primary); margin-bottom: 5px; }
        .stat-title { font-size: 11px; color: var(--text-light); }
        .stat-value { font-size: 16px; font-weight: 700; color: var(--text-dark); }

        /* --- Mobile Responsive Table Wrapper --- */
        .table-container {
            width: 100%;
            overflow-x: auto; /* Enables horizontal scroll */
            margin-bottom: 20px;
            border-radius: 8px;
            border: 1px solid #e2e8f0;
        }

        .diet-table {
            width: 100%;
            border-collapse: collapse;
            min-width: 400px; /* Forces scroll if screen is smaller than 400px */
        }

        .diet-table th, .diet-table td {
            text-align: left;
            padding: 12px;
            border-bottom: 1px solid #e2e8f0;
            font-size: 13px;
        }
        
        .diet-table th { background: #f1f5f9; white-space: nowrap; }
        
        /* Time column fixed width */
        .diet-time { 
            font-weight: 600; 
            color: var(--primary); 
            width: 80px; 
            vertical-align: top;
        }

        .section-title {
            font-size: 16px;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 10px;
            border-left: 4px solid var(--primary);
            padding-left: 8px;
        }

        .exercise-box {
            background: #f0fdf4;
            border: 1px solid #dcfce7;
            padding: 15px;
            border-radius: 10px;
            color: #166534;
            font-size: 13px;
            line-height: 1.5;
        }

        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }

        /* --- Media Query for Small Phones --- */
        @media (max-width: 380px) {
            .input-section { grid-template-columns: 1fr; } /* Stack all inputs */
            .stats-grid { grid-template-columns: 1fr 1fr; } 
        }

    </style>
</head>
<body>

<div class="container">
    <div class="header">
        <h2>Smart Health Chart</h2>
        <p>আপনার ডায়েট এবং লাইফস্টাইল প্ল্যানার</p>
    </div>

    <div class="input-section">
        <div class="form-group">
            <label>Age (বয়স)</label>
            <input type="number" id="age" placeholder="25">
        </div>
        <div class="form-group">
            <label>Weight (ওজন kg)</label>
            <input type="number" id="weight" placeholder="60">
        </div>
        <div class="form-group full-width">
            <label>Gender (লিঙ্গ)</label>
            <select id="gender">
                <option value="male">Male (পুরুষ)</option>
                <option value="female">Female (নারী)</option>
            </select>
        </div>
        <div class="form-group full-width">
            <label>Height (উচ্চতা)</label>
            <div class="height-inputs">
                <input type="number" id="feet" placeholder="Feet">
                <input type="number" id="inch" placeholder="Inch">
            </div>
        </div>
        
        <div class="full-width">
            <button class="generate-btn" onclick="generateChart()">চার্ট তৈরি করুন</button>
        </div>
    </div>

    <div id="result-chart">
        
        <div class="stats-grid">
            <div class="stat-card">
                <i class="fas fa-fire"></i>
                <div class="stat-title">Calories</div>
                <div class="stat-value" id="cal-val">--</div>
            </div>
            <div class="stat-card">
                <i class="fas fa-bed"></i>
                <div class="stat-title">Sleep</div>
                <div class="stat-value" id="sleep-val">--</div>
            </div>
            <div class="stat-card">
                <i class="fas fa-tint"></i>
                <div class="stat-title">Water</div>
                <div class="stat-value" id="water-val">--</div>
            </div>
            <div class="stat-card">
                <i class="fas fa-bullseye"></i>
                <div class="stat-title">Goal</div>
                <div class="stat-value" id="goal-val">--</div>
            </div>
        </div>

        <h3 class="section-title">Daily Diet Plan</h3>
        <div class="table-container">
            <table class="diet-table">
                <thead>
                    <tr>
                        <th>Time</th>
                        <th>Recommended Food</th>
                    </tr>
                </thead>
                <tbody id="diet-body">
                    </tbody>
            </table>
        </div>

        <h3 class="section-title">Exercise</h3>
        <div class="exercise-box" id="exercise-plan"></div>

    </div>
</div>

<script>
    function generateChart() {
        const age = parseInt(document.getElementById('age').value);
        const gender = document.getElementById('gender').value;
        const feet = parseInt(document.getElementById('feet').value);
        const inch = parseInt(document.getElementById('inch').value || 0);
        const weight = parseFloat(document.getElementById('weight').value);

        if (!age || !feet || !weight) {
            alert("সব তথ্য পূরণ করুন!");
            return;
        }

        // Logic (Same as before)
        const heightCm = ((feet * 12) + inch) * 2.54;
        let bmr;
        if (gender === 'male') {
            bmr = (10 * weight) + (6.25 * heightCm) - (5 * age) + 5;
        } else {
            bmr = (10 * weight) + (6.25 * heightCm) - (5 * age) - 161;
        }

        const heightM = heightCm / 100;
        const bmi = weight / (heightM * heightM);

        let goalText = "", calorieTarget = 0, exerciseText = "", dietType = "";

        if (bmi < 18.5) {
            goalText = "Gain Weight";
            calorieTarget = Math.round(bmr * 1.5) + 500;
            dietType = "gain";
            exerciseText = "<strong>Strength Training:</strong> ওজন বাড়াতে ভারী ব্যায়াম (Pushups, Squats) করুন। কার্ডিও কম করুন।";
        } else if (bmi >= 18.5 && bmi <= 24.9) {
            goalText = "Maintain";
            calorieTarget = Math.round(bmr * 1.4);
            dietType = "maintain";
            exerciseText = "<strong>Yoga/Walk:</strong> ফিটনেস ধরে রাখতে সকালে ৩০ মিনিট হাঁটা বা ফ্রি-হ্যান্ড এক্সারসাইজ করুন।";
        } else {
            goalText = "Lose Weight";
            calorieTarget = Math.round(bmr * 1.2) - 300;
            if (calorieTarget < 1200) calorieTarget = 1200;
            dietType = "loss";
            exerciseText = "<strong>Cardio (Run/Walk):</strong> ওজন কমাতে রোজ ৪৫ মিনিট জোরে হাঁটা বা দৌড়ানো জরুরি। চিনি বাদ দিন।";
        }

        let sleepTime = (age < 18) ? "8-9 Hrs" : "7-8 Hrs";
        let waterLiter = (weight * 0.033).toFixed(1) + " L";

        // Simple Diet Menu
        let breakfast, lunch, snack, dinner;
        if (dietType === "loss") {
            breakfast = "২টি আটার রুটি + সবজি + ১টি ডিম (সাদা অংশ)";
            lunch = "১ কাপ ভাত + ডাল + ১ পিস মাছ/মাংস + শসা";
            snack = "গ্রিন টি + ১টি ফল (আপেল/পেয়ারা)";
            dinner = "১টি রুটি + সবজি + সালাদ (হালকা খাবার)";
        } else if (dietType === "gain") {
            breakfast = "৩টি পরোটা/রুটি + ২টা ডিম + ১ গ্লাস দুধ";
            lunch = "২ কাপ ভাত + ঘন ডাল + আলু ভর্তা + মাছ/মাংস";
            snack = "দুধ-চা + বিস্কুট + বাদাম/ছোলা";
            dinner = "বেশি করে ভাত/রুটি + মাংস + ১ গ্লাস দুধ";
        } else {
            breakfast = "২টি রুটি + ১টি ডিম ভাজি + সবজি";
            lunch = "১.৫ কাপ ভাত + ডাল + মাছ/মাংস + সালাদ";
            snack = "চা + বিস্কুট বা যেকোনো ফল";
            dinner = "পরিমাণমতো ভাত/রুটি + মাছ/মাংস + সবজি";
        }

        // Update UI
        document.getElementById('cal-val').innerText = calorieTarget;
        document.getElementById('sleep-val').innerText = sleepTime;
        document.getElementById('water-val').innerText = waterLiter;
        document.getElementById('goal-val').innerText = goalText;
        document.getElementById('exercise-plan').innerHTML = exerciseText;

        const dietBody = document.getElementById('diet-body');
        dietBody.innerHTML = `
            <tr><td class="diet-time">Breakfast<br><small>8:00 AM</small></td><td>${breakfast}</td></tr>
            <tr><td class="diet-time">Lunch<br><small>1:30 PM</small></td><td>${lunch}</td></tr>
            <tr><td class="diet-time">Snack<br><small>5:30 PM</small></td><td>${snack}</td></tr>
            <tr><td class="diet-time">Dinner<br><small>9:00 PM</small></td><td>${dinner}</td></tr>
        `;

        document.getElementById('result-chart').style.display = 'block';
    }
</script>

</body>
</html>
